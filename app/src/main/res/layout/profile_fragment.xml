<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    tools:context=".ProfileFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="User Profile"
        android:textAlignment="center"
        android:textColor="@color/ToolBar_SeaTour"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/userimgdefault"
                    app:civ_border_color="#eeeeee"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtShowProfileName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reem Ahmed Naseer"
                        android:layout_marginTop="20dp"
                        android:textSize="16sp"
                        android:textColor="@color/DarkBlue_SeaTour"
                        android:tooltipText="الاسم" />

                    <TextView
                        android:id="@+id/txtShowEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_marginTop="20dp"
                        android:text="reem.197@gmail.com"
                        android:textColor="@color/DarkBlue_SeaTour"
                        android:textSize="16sp"
                        android:tooltipText="البريد الالكتروني" />

                    <TextView
                        android:id="@+id/txtShowPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:layout_marginTop="20dp"
                        android:text="346767098"
                        android:textColor="@color/DarkBlue_SeaTour"
                        android:textSize="16sp"
                        android:tooltipText="كلمة السر" />

                    <TextView
                        android:id="@+id/txtShowRegisterDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:maxLines="2"
                        android:text="0096744545587"
                        android:textSize="16sp"
                        android:textColor="@color/DarkBlue_SeaTour"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:textAllCaps="false"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/button_bk"
                    android:text="Delete"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_bk"
                    android:text="Edit"
                    android:textColor="@color/black" />

            </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>